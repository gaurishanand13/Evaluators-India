<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        android:background="#B2DFDB"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".lastStage">
    <FrameLayout
            android:id="@+id/lastStageFrameLayout"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="400dp">

        <Button
                android:textColor="@android:color/white"
                android:background="@android:color/holo_blue_dark"
                android:text="NEXT"
                android:layout_marginBottom="25dp"
                android:layout_gravity="bottom|center"
                android:id="@+id/finalLastStageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </FrameLayout>
    <FrameLayout
            android:visibility="gone"
            android:id="@+id/secondFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:textStyle="bold|italic|normal"
                android:gravity="center"
                android:textSize="40sp"
                android:text="Congratulations you are eligible to avail Loan from bank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </FrameLayout>
</FrameLayout>