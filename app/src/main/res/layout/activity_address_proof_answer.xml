<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addressProofAnswer">
    <FrameLayout
            android:background="#FF9800"
            android:id="@+id/yesAddressFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:background="@android:color/holo_red_dark"
                android:text="NEXT"
                android:layout_marginTop="150dp"
                android:layout_gravity="center"
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </FrameLayout>
    <FrameLayout
            android:visibility="gone"
            android:background="#FF9800"
            android:id="@+id/noAddressFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_marginBottom="100dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold|italic"
                android:textSize="28sp"
                android:text="Do you have the following?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <CheckBox
                    android:id="@+id/rentAgreementCheckBox"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="Rent Agreement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <CheckBox
                    android:id="@+id/electricityCheckBox"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="Owner Signed Electricity Bills"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <Button
                android:background="@android:color/holo_red_dark"
                android:text="NEXT"
                android:layout_marginTop="100dp"
                android:layout_gravity="center"
                android:id="@+id/nextButtonForNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </FrameLayout>

</FrameLayout>