<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fourthStage">
    <FrameLayout
            android:background="#B2DFDB"
            android:id="@+id/yesAddressFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_marginBottom="100dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold|italic"
                android:textSize="25sp"
                android:text="To avail loan you must have the below mentioned documents.\n Do you have the following?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <CheckBox
                    android:id="@+id/salarySlipCheckBox"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:text="3 month salary slip"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <CheckBox
                    android:id="@+id/bankStatementCheckBox"
                    android:textSize="30sp"
                    android:text="6 month Bank Statement"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
                android:background="@android:color/holo_red_dark"
                android:text="NEXT"
                android:layout_marginTop="100dp"
                android:layout_gravity="center"
                android:id="@+id/nextButtonRequirements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </FrameLayout>
</FrameLayout>