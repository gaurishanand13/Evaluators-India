<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAD7A0"
        android:fitsSystemWindows="true"
        tools:context=".addressProof">
    <com.google.android.material.appbar.AppBarLayout
            android:background="#FAD7A0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                app:title="@string/app_name"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="#FAD7A0"
                android:layout_height="wrap_content">
            <TextView
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textStyle="italic|bold"
                    android:textSize="28sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/roboto_black"
                    android:text="Answer Following to get a loan"
                    android:layout_width="match_parent"
                    app:layout_collapseMode="parallax"
                    android:height="150dp"
                    android:layout_height="wrap_content"/>
            <Toolbar
                    app:layout_collapseMode="pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
            android:background="@drawable/rectangle_with_circular_corners"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#FEF9E7"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold|italic"
                            android:textSize="28sp"
                            android:text="Is your address permanent?"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <RadioGroup
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <RadioButton
                                    android:id="@+id/yesAddress"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp"
                                    android:text="Yes"
                                    android:textStyle="bold"
                                    android:layout_width="75dp"
                                    android:layout_height="wrap_content"/>
                            <RadioButton
                                    android:id="@+id/noAddress"
                                    android:textSize="20sp"
                                    android:text="No"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    android:layout_width="75dp"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </RadioGroup>
                    <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            android:id="@+id/yesAddressLinearLayout"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_marginBottom="10dp"
                                android:textStyle="bold|italic"
                                android:textSize="23sp"
                                android:text="Do you have any of the following?"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        <CheckBox
                                android:id="@+id/passportCheckBox"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:text="Passport"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        <CheckBox
                                android:id="@+id/aadharCheckBox"
                                android:textSize="20sp"
                                android:text="Aadhar"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        <CheckBox
                                android:id="@+id/voterIDCheckBox"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:text="Voter ID"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        <CheckBox
                                android:id="@+id/drivinglicenseCheckBox"
                                android:textSize="20sp"
                                android:text="Driving License"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            android:id="@+id/noAddressLinearLayout"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_marginBottom="10dp"
                                android:textStyle="bold|italic"
                                android:textSize="23sp"
                                android:text="Do you have the following?"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        <CheckBox
                                android:id="@+id/rentAgreementCheckBox"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:text="Rent Agreement"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        <CheckBox
                                android:id="@+id/electricityCheckBox"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:text="Owner Signed Electricity Bills"
                                android:textColor="@android:color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#FEF9E7"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="28sp"
                            android:textStyle="bold|italic"
                            android:text="Do you have a Pan Card?"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <RadioGroup
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <LinearLayout

                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                            <RadioButton
                                    android:id="@+id/yesPancard"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp"
                                    android:text="Yes"
                                    android:textStyle="bold"
                                    android:layout_width="75dp"
                                    android:layout_height="wrap_content"/>
                            <RadioButton
                                    android:id="@+id/noPanCard"
                                    android:textSize="20sp"
                                    android:text="No"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    android:layout_width="75dp"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#FEF9E7"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold|italic"
                            android:textSize="28sp"
                            android:text="Do you have the following Documents?"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <CheckBox
                            android:id="@+id/salarySlipCheckBox"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:text="3 months salary slip"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <CheckBox
                            android:id="@+id/bankStatementCheckBox"
                            android:textSize="20sp"
                            android:text="6 months Bank Statement"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#FEF9E7"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold|italic"
                            android:textSize="28sp"
                            android:layout_marginTop="10dp"
                            android:text="Do you have 6 months salary in the bank?"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <RadioGroup
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <RadioButton
                                    android:id="@+id/yesSixMonthsSalary"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp"
                                    android:text="Yes"
                                    android:textStyle="bold"
                                    android:layout_width="75dp"
                                    android:layout_height="wrap_content"/>
                            <RadioButton
                                    android:id="@+id/noSixMonthsSalary"
                                    android:textSize="20sp"
                                    android:text="No"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    android:layout_width="75dp"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <EditText
                    android:layout_marginTop="30dp"
                    android:background="@drawable/oval_shape"
                    android:hint="If you have any other pervious Loan enter here"
                    android:textSize="20sp"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"/>
            <Button
                    android:id="@+id/submitButton"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/final_button"
                    android:textSize="23sp"
                    android:text="Check For Loan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>